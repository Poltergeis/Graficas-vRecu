<AltConfirmData>:
    canvas.before:
        Color:
            rgba: (0.02, 0.11, 0.13, 1)
        Rectangle:
            pos: root.pos
            size: root.size

    Label:
        id: alt_label_resumen_datos
        text: ''
        font_size: 25
        center_x: root.width / 2
        top: root.top * 0.9
        bold: True

    Button:
        id: alt_boton_datos_directos
        text: 'calcular tabla de frecuencias directa'
        text_size: self.width, None
        font_size: 25
        center_x: root.width * 0.42
        width: root.width * 0.4
        valign: 'center'
        halign: 'center'
        top: root.top * 0.65
        on_press: root.siguientePagina(1)

    Button:
        id: alt_boton_datos_agrupados
        text: 'calcular tabla de frecuencias directa'
        text_size: self.width, None
        font_size: 25
        center_x: root.width * 0.42
        width: root.width * 0.4
        valign: 'center'
        halign: 'center'
        top: root.top * 0.4
        on_press: root.siguientePagina(2)